{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ts", "*.js"]
    }
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  // Allows importing of JSON modules.
  "resolveJsonModule": true
}
